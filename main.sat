pub fn testLambda(): int
{
    lambda := fn(x: int): int {
        return x * x;
    };
    printf("%d^2 = %d\n", 5, lambda(5));
    printf("%d^2 = %d\n", 7, lambda(7));
    printf("%d^2 = %d\n", 7, fn(x: int): int {
        return x * x;
    }(7));
    return 0;
}

priv fn GetString(): string
